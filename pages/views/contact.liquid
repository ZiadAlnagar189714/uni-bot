{% layout "mainLayout.liquid" %}
{% block pageTitle %}Contact{% endblock %}
{% block content %}
<section class="location">
    <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3690.6520704291634!2d91.83061711454049!3d22.32899458530864!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30ad2755e6a1b817%3A0xd8f81467523d6d98!2sFiringi%20Bazar%20Rd%2C%20Chittagong!5e0!3m2!1sen!2sbd!4v1632244402618!5m2!1sen!2sbd"
        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

</section>

<section class="contact-us">
    <div class="row">
        <div class="contact-col">
            <div>
                <i class="fa fa-home"></i>
                <span>
                    <h5>XYZ road, ABC building</h5>
                    <p>Chittagong,Bangladesh</p>
                </span>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <span>
                    <h5>8801866020966</h5>
                    <p>Saturday to Thursday, at 10Am to 6PM</p>
                </span>
            </div>
            <div>
                <i class="fa fa-envelope-o"></i>
                <span>
                    <h5>showravmitra@gmail.com</h5>
                    <p>Email us</p>
                </span>
            </div>
        </div>
        <div class="contact-col">
            <form action="">
                <input type="text" placeholder="Enter Your Name" required>
                <input type="email" placeholder="Enter Your Mail" required>
                <input type="text" placeholder="Enter Your Subject" required>
                <textarea rows="8" placeholder="Message" required></textarea>
                <button type="Submit" class="hero-btn red-btn">Send Message </button>
            </form>

        </div>
    </div>
</section>
{% endblock %}